<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uwi.mona.mobileourvle.app">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>

    <permission
            android:name="edu.uwi.mona.mobileourvle.app.USE_LOCAL_ENTITY_SYNCRONIZER"
            android:protectionLevel="signature"></permission>
    <uses-permission android:name="edu.uwi.mona.mobileourvle.app.USE_LOCAL_ENTITY_SYNCRONIZER"/>


    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme">
        <activity
                android:screenOrientation="portrait"
                android:name=".Activities.LoginMainActivity"
                android:theme="@android:style/Theme.Light.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".Activities.Shared.LoginPromptActivity"
                android:label="@string/title_login">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".Activities.CourseListActivity"
                android:label="@string/title_course_list">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".Activities.CourseContentsActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".Activities.ForumDiscussionPagerActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".Activities.ForumDiscussionListActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".Activities.SendPostReplyActivity"></activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".Activities.ViewUserProfileActivity"></activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".Activities.AddCourseNoteActivity"></activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".Activities.ViewCourseNoteActivity"></activity>

        <provider
                android:exported="false"
                android:authorities="edu.uwi.mona.mobileourvle.app.data.ClassCourseTimeProvider"
                android:name=".Classes.DataLayer.Databases.ContentProviders.CourseClassTimeProvider"
                android:label="@string/provider_label_course_class_times"/>
        <provider
                android:exported="false"
                android:authorities="edu.uwi.mona.mobileourvle.app.data.CourseVideoesProvider"
                android:name=".Classes.DataLayer.Databases.ContentProviders.CourseVideoesProvider"
                android:label="@string/provider_label_course_class_times"/>
        <provider
                android:exported="false"
                android:authorities="edu.uwi.mona.mobileourvle.app.data.CoursePhotosProvider"
                android:name=".Classes.DataLayer.Databases.ContentProviders.CoursePhotosProvider"
                android:label="@string/provider_label_course_class_times"/>
        <provider
                android:exported="false"
                android:authorities="edu.uwi.mona.mobileourvle.app.data.CourseNotesProvider"
                android:name=".Classes.DataLayer.Databases.ContentProviders.CourseNotesProvider"
                android:label="@string/provider_label_course_class_times"/>
        <provider
                android:exported="false"
                android:authorities="edu.uwi.mona.mobileourvle.app.data.CourseNotesProvider"
                android:name=".Classes.DataLayer.Databases.ContentProviders.CourseNotesProvider"
                android:label="@string/provider_label_course_class_times"/>
        <provider
                android:name=".Classes.DataLayer.Databases.ContentProviders.MoodleCourseProvider"
                android:exported="false"
                android:authorities="edu.uwi.mona.mobileourvle.app.data.MoodleCourseProvider"></provider>
        <provider
                android:name=".Classes.DataLayer.Databases.ContentProviders.ForumDiscussionProvider"
                android:exported="false"
                android:authorities="edu.uwi.mona.mobileourvle.app.data.ForumDiscussionProvider"></provider>

        <provider
                android:name=".Classes.DataLayer.Databases.ContentProviders.ForumDiscussionPostProvider"
                android:exported="false"
                android:authorities="edu.uwi.mona.mobileourvle.app.data.ForumDiscussionPostProvider"></provider>

        <receiver
                android:exported="false"
                android:name="org.sourceforge.ah.android.utilities.Communication.EntitySyncroniser.Services.AlarmReceiver"></receiver>

        <provider
                android:exported="false"
                android:authorities="org.sourceforge.ah.lib.data.EntityManagerProvider"
                android:name="org.sourceforge.ah.android.utilities.Communication.EntitySyncroniser.ContentProviders.EntityManagerProvider"></provider>

        <provider
                android:exported="false"
                android:authorities="org.sourceforge.ah.lib.data.EntitySyncronizerProvider"
                android:name="org.sourceforge.ah.android.utilities.Communication.EntitySyncroniser.ContentProviders.EntitySyncronizerProvider"/>

        <service
                android:name="org.sourceforge.ah.android.utilities.Communication.EntitySyncroniser.Services.EntityPullSyncronizeService"
                android:exported="false"></service>
        <service
                android:name="org.sourceforge.ah.android.utilities.Communication.EntitySyncroniser.Services.EntityPushSyncronizeService"
                android:exported="false"></service>
        <service
                android:name="org.sourceforge.ah.android.utilities.Communication.EntitySyncroniser.Services.EntitySyncronizerService"
                android:exported="false"></service>

    </application>

</manifest>
